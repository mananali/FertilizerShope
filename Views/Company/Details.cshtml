@{
}
@using Microsoft.AspNetCore.Http
@model FertilizerShopWeb.Models.Company

@{
    var userRole = Context.Session.GetString("UserRole");
}

<h2>@Model.CompanyName</h2>

<div class="mb-3">
    <strong>Type:</strong> @Model.CompanyType <br />
    <strong>Contact Person:</strong> @Model.ContactPerson <br />
    <strong>Phone:</strong> @Model.ContactNumber <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Address:</strong> @Model.Address
</div>

<h4>Products</h4>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock Qty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Products)
            {
                <tr>
                    <td>@p.ProductName</td>
                    <td>@p.Price.ToString("0.00")</td>
                    <td>@p.StockQty</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found for this company.</p>
}

@if (userRole == "Admin")
{
    <a asp-action="Edit" asp-route-id="@Model.CompanyId" class="btn btn-primary">Edit Company</a>
    <form asp-action="Delete" asp-route-id="@Model.CompanyId" method="post" style="display:inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this company?')">Delete Company</button>
    </form>
}
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
