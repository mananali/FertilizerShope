<h2>Dashboard</h2>
<div class="row mt-4">

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">@ViewBag.ProductCount products</p>
                <a class="btn btn-light btn-sm @(ViewBag.UserRole == "Admin" ? "" : "disabled")"
                   asp-controller="Product" asp-action="Index">View Products</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Companies</h5>
                <p class="card-text">@ViewBag.CompanyCount active companies</p>
                <a class="btn btn-light btn-sm @(ViewBag.UserRole == "Admin" ? "" : "disabled")"
                   asp-controller="Company" asp-action="Index">View Companies</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Invoices</h5>
                <p class="card-text">@ViewBag.InvoiceCount total invoices</p>
                <a class="btn btn-light btn-sm @(ViewBag.UserRole == "Admin" ? "" : "disabled")"
                   asp-controller="Invoice" asp-action="Index">View Invoices</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text">@ViewBag.UserCount registered users</p>

                @if (ViewBag.UserRole == "Admin")
                {
                    <a class="btn btn-light btn-sm" asp-controller="User" asp-action="Index">View Users</a>
                }
                else if (ViewBag.UserRole == "Staff")
                {
                    <a class="btn btn-light btn-sm" asp-controller="User" asp-action="Register">Register User</a>
                }
                else
                {
                    <button class="btn btn-light btn-sm disabled">No Access</button>
                }
            </div>
        </div>
    </div>

</div>
