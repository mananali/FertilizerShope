@using Microsoft.AspNetCore.Http
@using FertilizerShopWeb.Models

@{
    var role = Context.Session.GetString("UserRole"); // Admin / Staff / null
    var userId = Context.Session.GetString("UserId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FertilizerShopWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Navbar improvements */
        .navbar-brand {
            font-weight: bold;
            color: #2C3E50;
        }

        .nav-link {
            font-weight: 500;
        }

            .nav-link:hover {
                color: #1ABC9C !important;
            }

        /* Footer */
        footer {
            background-color: #f8f9fa;
            padding: 15px 0;
            font-size: 0.9rem;
        }

        /* Responsive container padding */
        main {
            padding-top: 20px;
        }

        /* Shadow for navbar */
        nav.navbar {
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        /* Highlight current page */
        .nav-link.active {
            font-weight: bold;
            color: #1ABC9C !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FertilizerShopWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Home") ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Privacy") ? "active" : "")" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (string.IsNullOrEmpty(userId))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Invoice" asp-action="Index">Invoices</a>
                            </li>

                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Product" asp-action="Create">Add Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Company" asp-action="Index">Companies</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="Register">Add New User</a>
                                </li>
                            }

                            @if (role == "Staff")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="Register">Register User</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div class="container text-center text-muted">
            &copy; 2026 FertilizerShopWeb. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
