@{
}

@model IEnumerable<FertilizerShopWeb.Models.Stock>
@* @model IEnumerable<Fertilizer_And_Seed_management_System.Models.Product> *@


<h2>Stock History</h2>

<a asp-action="StockIn" class="btn btn-success">Stock In</a>
<a asp-action="StockOut" class="btn btn-danger">Stock Out</a>

<table class="table table-bordered mt-2">
    <tr>
        <th>Date</th>
        <th>Product</th>
        <th>Qty</th>
        <th>Type</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EntryDate</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Quantity</td>
            <td>@item.StockType</td>
        </tr>
    }
</table>

