@{
}
@model FertilizerShopWeb.Models.Invoice

<h2>Invoice #: @Model.InvoiceNo</h2>
<p>Date: @Model.InvoiceDate.ToShortDateString()</p>
@* <p>Grand Total: @Model.GrandTotal</p> *@


<table class="table table-bordered">
    <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Qty</td>
            <td>@item.Rate</td>
            <td>@item.Amount</td>
        </tr>
    }
</table>

<p>Total Amount: @Model.GrandTotal</p>

