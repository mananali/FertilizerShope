@model FertilizerShopWeb.Models.Invoice

@{
    ViewData["Title"] = "Edit Invoice";
}

<div class="container mt-4">

    <h2 class="mb-4 text-primary">Edit Invoice</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="InvoiceId" />

        <!-- Customer Info -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="CustomerName" class="form-label">Customer Name</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Customer name" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CustomerContact" class="form-label">Customer Contact</label>
                <input asp-for="CustomerContact" class="form-control" placeholder="Mobile number" />
                <span asp-validation-for="CustomerContact" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <!-- Products Section -->
        <h4 class="mb-3 text-secondary">Products</h4>
        <div id="items-container">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <div class="row mb-2 align-items-end border p-2 rounded">
                    <div class="col-md-5">
                        <label class="form-label">Product</label>
                        <select asp-for="Items[@i].ProductId" asp-items="ViewBag.ProductList" class="form-select">
                            <option value="">-- Select Product --</option>
                        </select>
                        <span asp-validation-for="Items[@i].ProductId" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Quantity</label>
                        <input asp-for="Items[@i].Qty" class="form-control" />
                        <span asp-validation-for="Items[@i].Qty" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Rate</label>
                        <input asp-for="Items[@i].Rate" class="form-control" readonly />
                    </div>
                </div>
            }
        </div>

        <hr />

        <!-- Totals -->
        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="SubTotal" class="form-label">Sub Total</label>
                <input asp-for="SubTotal" class="form-control" readonly />
            </div>
            <div class="col-md-4">
                <label asp-for="Vat" class="form-label">VAT</label>
                <input asp-for="Vat" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="GrandTotal" class="form-label">Grand Total</label>
                <input asp-for="GrandTotal" class="form-control" readonly />
            </div>
        </div>

        <!-- Buttons -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary me-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
